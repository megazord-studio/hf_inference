/* Optional “primary” if you bring it back later */
.run-amber .btn-primary {
  color: #0e0a08;
  background: linear-gradient(135deg, #ffd166, #ffb703 40%, #ff5cf0 100%);
  box-shadow: 0 0 20px rgba(255,209,102,.35), 0 0 24px rgba(255,92,240,.2);
  border: 0;

:root {
  --bg:#070b11; --text:#e3eeff; --muted:#9fb0cc;
  --panel:#0b1220; --panel2:#0b1220; --panel3:#0e1627;
  --line:rgba(148,163,184,.16);
  --neon:#00ffd0; --neon2:#8a2be2; --neon3:#ff5cf0;
  --ok:#16ffbd; --warn:#ffb703; --danger:#ff4d6d;
  --hover:rgba(0,255,208,.06);
  --zebra:rgba(138,43,226,.05);
  --shadow-neon:0 0 16px rgba(0,255,208,.28), 0 0 22px rgba(255,92,240,.18);
  --radius:16px;

  /* <<< make Shoelace dialogs THE top-most thing >>> */
  --sl-z-index-dialog: 2147483000;
}

/* Custom scrollbar styling */
.inference-modal::-webkit-scrollbar,
.inference-form::-webkit-scrollbar,
.inference-output::-webkit-scrollbar,
.inference-output__body::-webkit-scrollbar,
.run-dialog::part(panel)::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

.inference-modal::-webkit-scrollbar-track,
.inference-form::-webkit-scrollbar-track,
.inference-output::-webkit-scrollbar-track,
.inference-output__body::-webkit-scrollbar-track,
.run-dialog::part(panel)::-webkit-scrollbar-track {
  background: rgba(0,0,0,.2);
  border-radius: 4px;
}

.inference-modal::-webkit-scrollbar-thumb,
.inference-form::-webkit-scrollbar-thumb,
.inference-output::-webkit-scrollbar-thumb,
.inference-output__body::-webkit-scrollbar-thumb,
.run-dialog::part(panel)::-webkit-scrollbar-thumb {
  background: rgba(0,255,208,.3);
  border-radius: 4px;
  transition: background .2s ease;
}

.inference-modal::-webkit-scrollbar-thumb:hover,
.inference-form::-webkit-scrollbar-thumb:hover,
.inference-output::-webkit-scrollbar-thumb:hover,
.inference-output__body::-webkit-scrollbar-thumb:hover,
.run-dialog::part(panel)::-webkit-scrollbar-thumb:hover {
  background: rgba(0,255,208,.45);
}

html,body {
  margin:0; padding:0; height:100%;
  background:
      radial-gradient(1000px 520px at 12% -10%, rgba(138,43,226,.16), transparent 60%),
      radial-gradient(1200px 600px at 88% -6%, rgba(0,255,208,.12), transparent 60%),
      linear-gradient(180deg, rgba(255,92,240,.06), transparent 30%),
      var(--bg);
  color:var(--text);

  font-family: "Orbitron", ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
  font-optical-sizing: auto;
  font-weight: 400;
  font-style: normal;

  font-size:14px;
  line-height:1.55;
}

/* Text selection styling */
::selection {
  background: rgba(0,255,208,.3);
  color: #fff;
  text-shadow: 0 0 4px rgba(0,255,208,.4);
}

::-moz-selection {
  background: rgba(0,255,208,.3);
  color: #fff;
  text-shadow: 0 0 4px rgba(0,255,208,.4);
}

/* Background grid overlay */
.page-grid,
.page-grid::before,
.page-grid::after { position: fixed; inset: 0; pointer-events: none; }
.page-grid {
  z-index: 0;
  background:
      repeating-linear-gradient(0deg,   rgba(255,255,255,.10) 0 1px, transparent 1px 24px),
      repeating-linear-gradient(90deg,  rgba(255,255,255,.10) 0 1px, transparent 1px 24px);
  opacity: .35;
}
.page-grid::before { content: ""; background:
    radial-gradient(800px 500px at 20% 0%, rgba(138,43,226,.35), transparent 60%),
    radial-gradient(900px 550px at 80% 0%, rgba(0,255,208,.30), transparent 60%);
  mix-blend-mode: screen; opacity: .7; filter: blur(0.4px); }
.page-grid::after { content: ""; background:
    linear-gradient(rgba(0,255,200,.08) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0,255,200,.08) 1px, transparent 1px);
  background-size: 24px 24px, 24px 24px; animation: gridDrift 60s linear infinite; opacity: .45; }
@keyframes gridDrift { 0% { background-position: 0 0, 0 0; } 100% { background-position: 1200px 1200px, 1200px 1200px; } }

/* subtle scan */
body::before{ content:""; position:fixed; inset:0; pointer-events:none;
  background-image: repeating-linear-gradient(0deg,rgba(255,255,255,.04) 0 1px, transparent 1px 4px);
  mix-blend-mode:overlay; opacity:.25; animation:scan 9s linear infinite; }
@keyframes scan{ 0%{ transform:translateY(0)} 100%{ transform:translateY(4px)} }

/* Utilities */
.muted { color: var(--muted); }
.container { max-width:1200px; margin:28px auto 44px; padding:0 16px; position: relative; z-index: 1; }

/* Header (models page) */
h1 { margin:0 0 8px; font-weight:900; letter-spacing:.2px;
  text-shadow:0 0 16px rgba(0,255,208,.35), 0 0 24px rgba(255,92,240,.2); }
.tagline { margin:0 0 22px; font-size:13px; color:var(--muted); max-width:900px; }
.header-bar { display:flex; align-items:center; justify-content:space-between; gap:24px; flex-wrap:wrap; }
.logout-btn { display:inline-block; padding:10px 16px; font-weight:700; letter-spacing:.25px; text-decoration:none; color:#0b0f14;
  background:linear-gradient(135deg, var(--neon), var(--neon3) 60%, var(--neon2)); border-radius:12px; box-shadow:var(--shadow-neon);
  transition:filter .15s ease, transform .08s ease; }
.logout-btn:hover { filter:brightness(1.07); transform:translateY(-1px); }

/* Cards / panel (models page) */
.panel { display:grid; gap:12px; }
.card { border:1px solid var(--line); border-radius:var(--radius); background:
    linear-gradient(180deg, rgba(138,43,226,.08), rgba(0,0,0,.22)),
    radial-gradient(1000px 140px at 10% 0%, rgba(255,92,240,.08), transparent 70%),
    var(--panel3); box-shadow:inset 0 0 10px rgba(138,43,226,.08), 0 0 28px rgba(0,255,208,.10); overflow:hidden; }
.card.note { padding:22px 24px 26px; }

/* Toolbar */
.toolbar { display:flex; gap:12px; align-items:center; padding:16px; position:relative; }
.toolbar::after { content:""; position:absolute; inset:0; pointer-events:none; border-radius:calc(var(--radius) - 2px); box-shadow:inset 0 0 0 1px rgba(0,255,208,.10), inset 0 0 18px rgba(138,43,226,.12); }
.spacer { flex:1; }

input, select, sl-button::part(base) {
  background:var(--panel2); color:var(--text); border:1px solid var(--line); border-radius:12px;
  padding:10px 12px; outline:none; box-shadow:inset 0 0 0 1px rgba(0,255,208,.05);
  font-family: inherit; font-weight:600;
}

.neon-btn {
  appearance: none; border: 0; cursor: pointer; padding: 10px 14px; border-radius: 12px;
  font-family: "Orbitron", ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
  font-weight: 800; letter-spacing: .2px; color: #0b0f14;
  background: linear-gradient(135deg, var(--neon), var(--neon3) 60%, var(--neon2));
  box-shadow: var(--shadow-neon);
  transition: transform .08s ease, filter .15s ease, box-shadow .15s ease;
}

/* -------- Inference modal (Run) -------- */
.run-dialog {
  --run-modal-width: min(1180px, 94vw);
  --width: var(--run-modal-width);
  --max-width: var(--run-modal-width);
  --height: auto;
  --max-height: calc(100vh - 64px);
}

.run-dialog::part(panel) {
  background:
      linear-gradient(180deg, rgba(0,0,0,.45), rgba(0,0,0,.75)),
      radial-gradient(900px 480px at 4% -6%, rgba(0,255,208,.16), transparent 65%),
      var(--panel3);
  border-radius: 18px;
  border: 1px solid rgba(0,255,208,.12);
  box-shadow: 0 24px 64px rgba(0,0,0,.6), 0 0 0 1px rgba(138,43,226,.18);
  width: var(--run-modal-width);
  max-width: var(--run-modal-width);
  min-width: min(900px, 92vw);
  max-height: min(90vh, 940px);
  display: flex;
  flex-direction: column;
  padding: 0;
  overflow-y: auto;
}

.run-dialog::part(body) {
  overflow: visible;
  max-height: none;
  padding: 0;
}

.inference-modal {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  gap: 18px;
  padding: 24px 28px 22px;
  width: 100%;
  min-height: 0;
  overflow-x: hidden;
  overflow-y: auto;
  font-family: "Inter", "Segoe UI", system-ui, -apple-system, "Roboto", "Helvetica", sans-serif;
  line-height: 1.5;
}

.inference-modal.inference-modal--scrollable {
  overflow-y: auto;
}

.inference-modal__header {
  display: grid;
  gap: 10px;
}

.inference-modal__chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4px 12px;
  border-radius: 999px;
  font-size: 11px;
  letter-spacing: .6px;
  text-transform: uppercase;
  background: linear-gradient(135deg, rgba(0,255,208,.22), rgba(255,92,240,.22));
  width: fit-content;
  box-shadow: 0 2px 8px rgba(0,255,208,.15);
  border: 1px solid rgba(0,255,208,.1);
}

.inference-modal__title {
  margin: 0;
  font-size: 24px;
  font-weight: 900;
  letter-spacing: .2px;
  line-height: 1.2;
  word-break: break-word;
}

.inference-modal__subtitle {
  margin: 0;
  font-size: 14px;
  line-height: 1.5;
  color: rgba(223, 242, 255, .85);
}

.inference-modal__meta {
  display: flex;
  gap: 8px;
  font-size: 13px;
  flex-wrap: wrap;
  color: rgba(187, 207, 230, .8);
}

.muted-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 2px 8px;
  border-radius: 999px;
  background: rgba(0,255,208,.12);
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: .4px;
  margin-right: 6px;
}

.inference-modal__body {
  display: grid;
  grid-template-columns: minmax(0, 1.15fr) minmax(0, 0.85fr);
  gap: 20px;
  min-height: 0;
  overflow: hidden;
}

@media (max-width: 1024px) {
  .inference-modal__body {
    grid-template-columns: 1fr;
    max-height: none;
    overflow-y: auto;
  }
  .inference-output {
    order: 2;
  }
  .inference-form__grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 720px) {
  .run-dialog {
    --run-modal-width: min(96vw, 640px);
    --width: var(--run-modal-width);
    --max-width: var(--run-modal-width);
  }
  .inference-modal {
    padding: 20px 18px 18px;
    gap: 16px;
  }
  .inference-modal__header-chip {
    font-size: 10px;
    padding: 3px 10px;
  }
  .inference-modal__title {
    font-size: 20px;
  }
  .inference-modal__subtitle {
    font-size: 13px;
  }
  .inference-form {
    padding: 18px;
    gap: 16px;
  }
  .inference-output {
    padding: 18px;
    gap: 14px;
  }
  .inference-progress {
    padding: 14px 16px;
    gap: 10px;
  }
  .inference-progress__steps {
    grid-template-columns: 1fr;
  }
}

.inference-form {
  display: flex;
  flex-direction: column;
  gap: 18px;
  padding: 20px;
  border-radius: 16px;
  border: 1px solid rgba(0,255,208,.16);
  background: rgba(7, 11, 17, .82);
  backdrop-filter: blur(6px);
  min-height: 0;
  overflow: auto;
  box-shadow: 0 2px 8px rgba(0,0,0,.15);
}

.inference-form__grid {
  display: grid;
  gap: 14px;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
}

.inference-form__file-grid {
  display: grid;
  gap: 12px;
}

.inference-form__advanced details {
  background: rgba(0,0,0,.32);
  border-radius: 12px;
  padding: 12px 14px;
  border: 1px solid rgba(0,255,208,.12);
  transition: border-color .2s ease;
}

.inference-form__advanced details[open] {
  border-color: rgba(0,255,208,.24);
}

.inference-form__advanced summary {
  cursor: pointer;
  font-weight: 700;
  letter-spacing: .3px;
  font-size: 13px;
  transition: color .2s ease;
}

.inference-form__advanced summary:hover {
  color: rgba(0,255,208,.85);
}

.inference-form__advanced-grid {
  display: grid;
  gap: 12px;
  margin-top: 12px;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
}

.inference-field {
  display: flex;
  flex-direction: column;
  gap: 7px;
}

.inference-field--inline {
  flex-direction: column;
}

.inference-field__label {
  font-size: 13px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: .3px;
  color: rgba(221, 233, 245, .75);
}

.inference-field__help {
  font-size: 12px;
  line-height: 1.45;
  color: rgba(186,230,253,.75);
}

.inference-field textarea,
.inference-field input,
.inference-field select {
  background: rgba(11, 18, 32, .9);
  border: 1px solid rgba(0,255,208,.14);
  border-radius: 11px;
  padding: 11px 13px;
  color: var(--text);
  font-family: inherit;
  font-size: 14px;
  line-height: 1.45;
  resize: vertical;
  transition: border-color .15s ease, box-shadow .15s ease, background .15s ease;
  box-shadow: inset 0 1px 2px rgba(0,0,0,.1);
}

.inference-field textarea:focus,
.inference-field input:focus,
.inference-field select:focus {
  border-color: rgba(0,255,208,.45);
  box-shadow: 0 0 0 2px rgba(0,255,208,.18), inset 0 1px 2px rgba(0,0,0,.1);
  outline: none;
  background: rgba(11, 18, 32, 1);
}

.inference-field--file input[type="file"] {
  padding: 8px 10px;
  cursor: pointer;
}

.inference-file-preview {
  display: flex;
  flex-direction: column;
  gap: 8px;
  font-size: 12px;
  min-height: 36px;
}

.inference-file-preview__meta {
  font-family: "Orbitron", ui-sans-serif;
  letter-spacing: .2px;
  line-height: 1.4;
  color: rgba(186,230,253,.85);
}

.inference-file-preview__image {
  max-width: 100%;
  max-height: min(380px, 42vh);
  object-fit: contain;
  border-radius: 11px;
  border: 1px solid rgba(0,255,208,.12);
  box-shadow: 0 2px 8px rgba(0,0,0,.15);
  transition: border-color .2s ease, box-shadow .2s ease;
}

.inference-file-preview__image:hover {
  border-color: rgba(0,255,208,.22);
  box-shadow: 0 4px 12px rgba(0,0,0,.2);
}

.inference-form__status {
  padding: 10px 13px;
  border-radius: 11px;
  background: rgba(138,43,226,.18);
  border: 1px solid rgba(138,43,226,.3);
  font-size: 13px;
  line-height: 1.5;
  box-shadow: 0 2px 6px rgba(138,43,226,.15);
  animation: slideIn .25s ease;
}

.inference-form__status--error {
  background: rgba(255,77,109,.16);
  border-color: rgba(255,77,109,.4);
  color: #ff99aa;
  box-shadow: 0 2px 6px rgba(255,77,109,.2);
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.inference-progress {
  display: grid;
  gap: 12px;
  padding: 16px 18px;
  border-radius: 13px;
  border: 1px solid rgba(0,255,208,.14);
  background: rgba(6, 10, 18, .82);
  box-shadow: 0 2px 8px rgba(0,0,0,.12);
}

.inference-progress__header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  gap: 10px;
}

.inference-progress__header h4 {
  margin: 0;
  font-size: 14px;
  letter-spacing: .25px;
  text-transform: uppercase;
}

.inference-progress__bar {
  position: relative;
  height: 5px;
  border-radius: 999px;
  background: rgba(0,255,208,.15);
  overflow: hidden;
  box-shadow: inset 0 1px 3px rgba(0,0,0,.2);
}

.inference-progress__bar-fill {
  position: absolute;
  inset: 0;
  width: 0%;
  background: linear-gradient(90deg, rgba(0,255,208,.8), rgba(255,92,240,.65));
  transition: width .4s ease;
  box-shadow: 0 0 8px rgba(0,255,208,.4);
}

.inference-progress__steps {
  list-style: none;
  display: grid;
  gap: 9px;
  padding: 0;
  margin: 0;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
}

.inference-progress__step {
  padding: 10px 12px;
  border-radius: 11px;
  border: 1px solid rgba(0,255,208,.08);
  background: rgba(14, 22, 34, .78);
  display: grid;
  gap: 5px;
  min-height: 76px;
  transition: all .25s ease;
}

.inference-progress__step-title {
  font-size: 12px;
  font-weight: 700;
  letter-spacing: .2px;
  text-transform: uppercase;
}

.inference-progress__step-desc {
  font-size: 12px;
  line-height: 1.4;
  color: rgba(205, 225, 240, .75);
}

.inference-progress__step.is-active {
  border-color: rgba(0,255,208,.35);
  box-shadow: 0 0 22px rgba(0,255,208,.18);
  transform: scale(1.01);
}

.inference-progress__step.is-complete {
  border-color: rgba(90,240,255,.4);
  background: linear-gradient(135deg, rgba(0,255,208,.18), rgba(0, 90, 255, .15));
}

.inference-progress__step.is-error {
  border-color: rgba(255,99,132,.55);
  background: linear-gradient(135deg, rgba(255,99,132,.22), rgba(86,12,35,.45));
}

.inference-form__actions {
  display: flex;
  justify-content: flex-end;
  gap: 14px;
  padding-top: 4px;
}

.inference-output {
  display: flex;
  flex-direction: column;
  gap: 16px;
  padding: 20px;
  border-radius: 18px;
  border: 1px solid rgba(0,255,208,.16);
  background: rgba(11, 18, 32, .78);
  min-height: 0;
  overflow: auto;
  box-shadow: 0 2px 8px rgba(0,0,0,.15);
}

.inference-output__header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  gap: 10px;
}

.inference-section__title {
  margin: 0;
  font-size: 16px;
  letter-spacing: .25px;
  text-transform: uppercase;
}

.inference-output__body {
  display: grid;
  gap: 14px;
  overflow: auto;
  padding-right: 4px;
}

.inference-output__text,
.inference-output__json {
  margin: 0;
  background: rgba(0,0,0,.35);
  border-radius: 11px;
  padding: 14px 16px;
  border: 1px solid rgba(0,255,208,.12);
  font-family: "JetBrains Mono", "Fira Code", ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", monospace;
  font-size: 13px;
  line-height: 1.55;
  white-space: pre-wrap;
  word-break: break-word;
  box-shadow: inset 0 1px 3px rgba(0,0,0,.15);
  transition: border-color .2s ease;
}

.inference-output__text:hover,
.inference-output__json:hover {
  border-color: rgba(0,255,208,.2);
}

.inference-output__image,
.inference-output__audio,
.inference-output__video {
  width: 100%;
  max-height: min(360px, 40vh);
  object-fit: contain;
  border-radius: 11px;
  border: 1px solid rgba(0,255,208,.12);
  box-shadow: 0 4px 12px rgba(0,0,0,.2);
  transition: transform .2s ease, box-shadow .2s ease;
}

.inference-output__image:hover {
  transform: scale(1.005);
  box-shadow: 0 6px 16px rgba(0,0,0,.25);
}

.inference-output__files {
  display: flex;
  gap: 9px;
  flex-wrap: wrap;
}

.inference-output__empty {
  font-size: 13px;
  color: rgba(186,230,253,.75);
}
.inference-modal__message {
  padding: 24px;
  display: grid;
  gap: 16px;
}
.neon-btn:hover { filter: brightness(1.06); transform: translateY(-1px); }
.neon-btn.is-active { box-shadow: 0 0 28px rgba(0,255,208,.55), 0 0 36px rgba(255,92,240,.35); outline: 2px solid rgba(90,240,255,.35); }

#count { margin: 8px 16px 0; display:inline-block; padding:6px 10px; border-radius:10px; background: linear-gradient(90deg, rgba(0,255,208,.12), rgba(255,92,240,.12)); border: 1px solid var(--line); box-shadow: 0 0 10px rgba(0,255,208,.15) inset; }
#spinner { padding:12px 16px; color:var(--muted); }

/* Table (models page) */
.table-wrap { height: 70vh; overflow: hidden; }
table { width:100%; border-collapse:separate; border-spacing:0; table-layout: fixed; }
thead th { position:sticky; top:0; z-index:1; background: linear-gradient(180deg, rgba(0,255,208,.10), rgba(0,0,0,0)), var(--panel3); padding:12px 10px; text-align:left; font-weight:900; border-bottom:1px solid var(--line); letter-spacing:.2px; }
thead th, tbody td { overflow:hidden; text-overflow:ellipsis; }
tbody td { padding:10px; border-bottom:1px solid var(--line); }
tbody tr:nth-child(even) td { background:var(--zebra); }
tbody tr:hover td { background:var(--hover); }
td.num { text-align:right; font-weight:800; letter-spacing:.15px; text-shadow:0 0 6px rgba(0,255,208,.18); }

.link a { color:var(--neon); text-decoration:none; word-break:break-word; white-space:normal; }
.link a:hover { color:#5af0ff; text-shadow:0 0 8px rgba(0,255,208,.35); }

.chip { display:inline-block; padding:2px 8px; border-radius:999px; font-size:11px; border:1px solid var(--line); }
.chip-true   { background:rgba(255,77,109,.18);  border-color:rgba(255,77,109,.55);  color:#ff8aa3; }
.chip-manual { background:rgba(255,183,3,.16);   border-color:rgba(255,183,3,.55);   color:#ffd278; }
.chip-false  { background:rgba(22,255,189,.14);  border-color:rgba(22,255,189,.55);  color:var(--ok); }

.sortable { cursor:pointer; user-select:none; }
.sortable .label { display:inline-flex; align-items:center; gap:8px; }
.sort-icon { opacity:.35; transition: transform .12s ease, opacity .12s ease; font-size:10px; }
.sortable:hover .sort-icon { opacity:.7; }
.sort-asc .sort-icon { opacity:1; transform: rotate(180deg); text-shadow:0 0 8px rgba(0,255,208,.4); }
.sort-desc .sort-icon { opacity:1; transform: rotate(0deg);   text-shadow:0 0 8px rgba(0,255,208,.4); }

/* ---------------- Login page specific ---------------- */
.wrap{
  position:relative; z-index:10; max-width:660px;
  margin:clamp(40px,14vh,160px) auto; padding:42px 46px 52px;
  border:1px solid var(--line); border-radius:20px;
  background:
      radial-gradient(1200px 600px at -20% -40%, rgba(138,43,226,.16), transparent 70%),
      radial-gradient(1200px 600px at 120% -40%, rgba(0,255,208,.12), transparent 70%),
      linear-gradient(180deg, rgba(138,43,226,.12), rgba(0,0,0,.55));
  backdrop-filter:blur(22px) saturate(140%);
  box-shadow: inset 0 0 0 1px rgba(0,255,208,.22),
  0 0 32px -6px rgba(0,255,208,.40),
  0 0 60px -18px rgba(255,92,240,.55);
}
.wrap::after{
  content:""; position:absolute; inset:0; border-radius:inherit; pointer-events:none;
  box-shadow:0 0 0 1px rgba(255,255,255,.04),0 0 0 3px rgba(0,255,208,.06),0 0 34px rgba(255,92,240,.25);
  mix-blend-mode:overlay;
}
h1.glitch{ position:relative; color:#e6fbff; text-shadow:0 0 22px rgba(0,255,208,.65),0 0 38px rgba(255,92,240,.32); margin:0 0 6px; }
.glitch::before,.glitch::after{ content:attr(data-text); position:absolute; left:0; top:0; pointer-events:none; }
.glitch::before{ animation:gl1 2.7s infinite linear alternate; color:var(--neon3); mix-blend-mode:screen; opacity:.55; }
.glitch::after{ animation:gl2 1.8s infinite linear alternate; color:var(--neon2); mix-blend-mode:screen; opacity:.55; }
@keyframes gl1{0%{transform:translate(0,0)}20%{transform:translate(-2px,1px)}40%{transform:translate(1px,-1px)}60%{transform:translate(-1px,2px)}80%{transform:translate(2px,-1px)}100%{transform:translate(0,0)}}
@keyframes gl2{0%{transform:translate(0,0)}25%{transform:translate(2px,-1px)}50%{transform:translate(-1px,1px)}75%{transform:translate(1px,2px)}100%{transform:translate(0,0)}}
.subtitle{ margin:0 0 24px; font-size:13px; letter-spacing:.35px; color:var(--muted);
  background:linear-gradient(90deg,var(--neon),var(--neon3)); -webkit-background-clip:text; background-clip:text; color:transparent;
  filter:drop-shadow(0 0 6px rgba(0,255,208,.45));
}

label{ display:block; font-size:11px; letter-spacing:1.4px; font-weight:700; text-transform:uppercase; color:var(--muted); margin:0 0 6px 2px; }
.input-group{ margin-bottom:18px; position:relative; }
.wrap input{
  width:100%; background:rgba(8,18,30,.85); border:1px solid var(--line); border-radius:14px;
  padding:14px 16px 13px; font-size:14px; color:var(--text); font-weight:700; letter-spacing:.3px;
  outline:none; box-shadow:inset 0 0 0 1px rgba(0,255,208,.08),0 0 0 0 rgba(0,255,208,0);
  transition:.25s border,.25s box-shadow,.25s background;
  font-family: inherit;
}
.wrap input:focus{ border-color:var(--neon); box-shadow:0 0 0 2px rgba(0,255,208,.35),0 0 0 6px rgba(255,92,240,.22); background:#0d1f33; }
.wrap input::placeholder{ color:rgba(230,243,255,.35); letter-spacing:.5px; }

.wrap button{
  width:100%; appearance:none; border:0; cursor:pointer; padding:16px 20px; border-radius:16px;
  font-weight:900; letter-spacing:.6px; font-size:15px; position:relative; isolation:isolate; overflow:hidden;
  color:#041014; background:linear-gradient(135deg,var(--neon),var(--neon3) 55%,var(--neon2));
  box-shadow:0 0 16px rgba(0,255,208,.35),0 0 42px -10px rgba(255,92,240,.85);
  transition:.22s transform,.22s filter,.4s box-shadow;
  font-family: inherit;
}
.wrap button::before{ content:""; position:absolute; inset:0;
  background:linear-gradient(120deg,rgba(255,255,255,.35),transparent 38%,transparent 62%,rgba(255,255,255,.25));
  mix-blend-mode:overlay; opacity:.0; transition:.4s opacity;
}
.wrap button:hover{ filter:brightness(1.08); transform:translateY(-2px);
  box-shadow:0 0 28px rgba(0,255,208,.55),0 0 60px -6px rgba(255,92,240,.9);
}
.wrap button:hover::before{ opacity:.35 }
.wrap button:active{ transform:translateY(1px); filter:brightness(.95) }

.error,.info{ border-radius:14px; padding:12px 16px 14px; font-size:13px; line-height:1.45; letter-spacing:.3px; margin:0 0 18px; position:relative; }
.error{ background:linear-gradient(135deg,rgba(255,77,109,.15),rgba(255,77,109,.05)); border:1px solid rgba(255,77,109,.55); color:#ff97ab; text-shadow:0 0 10px rgba(255,77,109,.3);}
.info{ background:linear-gradient(135deg,rgba(0,255,208,.14),rgba(138,43,226,.14)); border:1px solid var(--line); color:var(--muted); text-shadow:0 0 8px rgba(0,255,208,.25);}

.footer{ margin-top:18px; font-size:11px; letter-spacing:.6px; text-align:center; color:var(--muted); opacity:.75; }
.footer a{ color:var(--neon); text-decoration:none; }
.footer a:hover{ text-shadow:0 0 8px rgba(0,255,208,.55); }

@media (max-width:640px){
  .wrap{ margin:32px 18px; padding:38px 30px 46px; }
}

/* ---- Run column: alignment & width ------------------------------------- */
.run-col { text-align: center; width: 8% !important; min-width: 70px; }
.run-cell { padding: 0 !important; width: 8% !important; }
.cell-run {
  height: 100%; display: flex; align-items: center; justify-content: center; padding: 2px 0;
}

/* ---- Neon RUN pill ------------------------------------------------------ */
.neon-run {
  --h: 26px;
  height: var(--h);
  min-width: 60px;
  padding: 0 10px;
  border-radius: 999px;
  display: inline-flex; align-items: center; justify-content: center; gap: 6px;
  font-family: "Orbitron", ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
  font-weight: 700; font-size: 10.5px; letter-spacing: .5px;
  color: #dffcff; text-shadow: 0 0 6px rgba(0,255,208,.55);
  background: rgba(12, 18, 30, 0.55);
  backdrop-filter: blur(4px);
  border: 1px solid rgba(0,255,208,0.25);
  box-shadow: 0 0 6px rgba(0,255,208,0.25), 0 0 8px rgba(255,92,240,0.20), inset 0 0 6px rgba(0,255,208,0.15);
  cursor: pointer; user-select: none; outline: none; transition: all 0.15s ease;
}
.neon-run:hover {
  color: #fff; background: rgba(20, 32, 48, 0.7);
  box-shadow: 0 0 12px rgba(0,255,208,0.35), 0 0 16px rgba(255,92,240,0.25), inset 0 0 8px rgba(0,255,208,0.25);
  transform: translateY(-1px);
}
.neon-run:active { transform: translateY(0); filter: brightness(0.95); }
.neon-run__icon { font-size: 11px; line-height: 1; text-shadow: 0 0 6px rgba(0,255,208,0.5); }
.neon-run__label { line-height: 1; transform: translateY(1px); }
@keyframes neonPulse { from { box-shadow: 0 0 8px rgba(0,255,208,0.2), 0 0 12px rgba(255,92,240,0.15); }
  to   { box-shadow: 0 0 14px rgba(0,255,208,0.4), 0 0 20px rgba(255,92,240,0.3); } }

/* ---- Shoelace dialog skin ------------------------------------------- */
.run-dialog { z-index: 2147483100; }
.run-dialog::part(overlay) { z-index: 2147483101; }
.run-dialog::part(panel)   { z-index: 2147483102; max-width: var(--width, 680px); }

.run-dialog::part(base) {
  border-radius: 16px;
  background:
      radial-gradient(1000px 240px at 10% -10%, rgba(255,92,240,.08), transparent 70%),
      radial-gradient(1000px 240px at 90% -10%, rgba(0,255,208,.10), transparent 70%),
      linear-gradient(180deg, rgba(22,30,48,.92), rgba(10,16,28,.92));
  border: 1px solid var(--line);
  box-shadow: 0 40px 80px rgba(0,0,0,.55), 0 0 28px rgba(0,255,208,.18);
  color: var(--text);
  font-family: "Orbitron", ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
}
.run-dialog::part(header) {
  font-weight: 900; letter-spacing: .4px;
  text-shadow: 0 0 10px rgba(0,255,208,.35);
}

/* Modal body + actions */
.run-modal-body { padding: 8px 2px; }
.run-modal-header { margin: 4px 0 18px; }
.run-modal-header h3 {
  margin: 6px 0 4px; font-size: 16px; font-weight: 800; letter-spacing: .3px;
  overflow: hidden; text-overflow: ellipsis; white-space: nowrap;
}
.run-chip {
  display:inline-block; font-size:10px; letter-spacing:.6px; padding:4px 8px;
  border-radius:999px; color:var(--text);
  background: rgba(0,255,208,.12); border:1px solid rgba(0,255,208,.35);
  text-transform: lowercase;
}
.run-modal-actions { display:grid; grid-template-columns:1fr 1fr; gap:12px; margin:14px 0 10px; }
.btn-primary, .btn-ghost {
  display:inline-flex; align-items:center; justify-content:center; gap:9px;
  height:38px; padding: 0 18px; border-radius:11px; text-decoration:none; font-weight:700; letter-spacing:.3px; font-size: 13px;
  transition: all .18s ease;
  cursor: pointer;
}
.btn-primary {
  color:#041014;
  background:linear-gradient(135deg, var(--neon), var(--neon3) 60%, var(--neon2));
  box-shadow:0 0 14px rgba(0,255,208,.35), 0 0 20px rgba(255,92,240,.22); border:0;
}
.btn-primary:hover { filter:brightness(1.07); transform:translateY(-1px); box-shadow:0 0 18px rgba(0,255,208,.45), 0 0 26px rgba(255,92,240,.28); }
.btn-primary:active { transform:translateY(0); filter:brightness(.95); }
.btn-primary:disabled, .btn-primary[disabled] {
  opacity: .5;
  cursor: not-allowed;
  filter: grayscale(.4);
  pointer-events: none;
}
.btn-ghost {
  color:var(--text); background:rgba(12,18,30,.6); border:1px solid var(--line);
  box-shadow:inset 0 0 0 1px rgba(0,255,208,.12);
}
.btn-ghost:hover { border-color:rgba(148,163,184,.35); box-shadow:inset 0 0 0 1px rgba(0,255,208,.22); transform:translateY(-1px); background:rgba(12,18,30,.75); }
.btn-ghost:active { transform:translateY(0); }
.btn-ghost:disabled, .btn-ghost[disabled] {
  opacity: .5;
  cursor: not-allowed;
  pointer-events: none;
}
.ico { filter:drop-shadow(0 0 6px rgba(0,255,208,.45)); }
.run-hint { margin-top:10px; font-size:12px; color:var(--muted); display:inline-flex; align-items:center; gap:8px; }
.run-hint .dot { width:7px; height:7px; border-radius:50%; background:radial-gradient(circle at 50% 40%, var(--neon), #28ffd1); box-shadow:0 0 10px rgba(0,255,208,.55); }

/* ================= Amber “Coming Soon” variant ===================== */
:root {
  --amber: #ffd166;
  --amber-2: #ffb703;
  --amber-ink: #0f0e0a;
}

/* Use .run-amber on the modal body to switch accents */
.run-amber .run-modal-header h3 {
  text-shadow: 0 0 8px rgba(255, 209, 102, .35);
}

.run-chip--amber {
  background: rgba(255, 209, 102, .12);
  border: 1px solid rgba(255, 209, 102, .55);
  color: var(--text);
}

.run-soon {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 10px;
  align-items: start;
  padding: 12px 14px;
  margin: 8px 0 12px;
  border-radius: 12px;
  border: 1px solid rgba(255, 209, 102, .35);
  background:
      linear-gradient(180deg, rgba(255, 183, 3, .08), rgba(0,0,0,.06)),
      rgba(18, 16, 24, .35);
  box-shadow:
      inset 0 0 0 1px rgba(255, 209, 102, .10),
      0 0 22px rgba(255, 183, 3, .10);
}

@media (max-height: 880px) {
  .inference-modal {
    padding: 22px 22px 20px;
    gap: 14px;
  }
  .inference-modal__header {
    gap: 8px;
  }
  .inference-form {
    padding: 18px;
    gap: 16px;
  }
  .inference-form__grid {
    gap: 14px;
  }
  .inference-progress {
    padding: 14px 15px;
    gap: 10px;
  }
  .inference-progress__step {
    min-height: 66px;
  }
  .inference-field textarea {
    max-height: 220px; /* Adjust textarea height for smaller screens */
  }
}

@media (max-height: 760px) {
  .run-dialog {
    --run-modal-width: min(92vw, 880px);
  }
  .inference-modal {
    padding: 20px 18px 18px;
    gap: 12px;
  }
  .inference-form {
    padding: 16px;
    gap: 14px;
  }
  .inference-progress__steps {
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  }
  .inference-progress__step {
    min-height: 54px;
  }
  .inference-modal__title {
    font-size: 22px;
  }
  .inference-modal__subtitle {
    font-size: 13px;
  }
  .inference-field textarea {
    max-height: 180px; /* Further adjust textarea height for very small screens */
  }
}
.run-soon .spark {
  color: var(--amber);
  text-shadow: 0 0 8px rgba(255, 209, 102, .65);
  filter: drop-shadow(0 0 6px rgba(255, 183, 3, .45));
  line-height: 1;
  margin-top: 1px;
}

/* Amber ghost button */
.btn-ghost--amber {
  border-color: rgba(255, 209, 102, .35);
  box-shadow: inset 0 0 0 1px rgba(255, 209, 102, .15);
}
.btn-ghost--amber:hover {
  border-color: rgba(255, 183, 3, .6);
  box-shadow:
      inset 0 0 0 1px rgba(255, 183, 3, .28),
      0 0 16px rgba(255, 183, 3, .18);
  transform: translateY(-1px);
  transition: .15s ease;
}

/* When using the amber/coming-soon variant, single-column actions */
.run-amber .run-modal-actions { grid-template-columns: 1fr; }

/* ==== Modal polish ===================================================== */
.run-dialog::part(base) {
  border-radius: 18px;
  background:
      radial-gradient(1200px 360px at 85% -10%, rgba(0,255,208,.10), transparent 70%),
      radial-gradient(1200px 360px at 15% -10%, rgba(255,92,240,.08), transparent 70%),
      linear-gradient(180deg, rgba(20,28,42,.96), rgba(10,16,28,.94));
  border: 1px solid rgba(255,255,255,.06);
  box-shadow:
      0 40px 100px rgba(0,0,0,.65),
      0 0 0 1px rgba(0,255,208,.10) inset,
      0 0 40px rgba(0,255,208,.12);
  backdrop-filter: blur(10px) saturate(120%);
}

.run-dialog::part(overlay) {
  backdrop-filter: blur(3px);
  background: radial-gradient(1200px 800px at 50% -10%, rgba(0,255,208,.10), transparent 60%),
  rgba(2,6,12,.60);
}

/* Body spacing */
.run-modal-body { padding: 6px 2px 10px; }
.run-modal-header { margin: 2px 0 16px; }

/* Title w/ subtle underline accent */
.run-modal-header h3,
.run-title {
  position: relative;
  margin: 6px 0 10px;
  font-size: 18px;
  font-weight: 900;
  letter-spacing: .35px;
  text-shadow: 0 0 10px rgba(0,255,208,.35);
}
.run-amber .run-modal-header h3::after,
.run-amber .run-title::after {
  content: "";
  position: absolute; left: 0; bottom: -6px;
  width: 140px; height: 2px;
  border-radius: 2px;
  background: linear-gradient(90deg, rgba(255,209,102,.9), rgba(255,183,3,.35), transparent 70%);
  box-shadow: 0 0 10px rgba(255,209,102,.55);
}

/* Task pill */
.run-chip,
.run-chip--amber {
  display:inline-block;
  margin-bottom: 8px;
  padding: 5px 10px;
  border-radius: 999px;
  font-size: 10.5px;
  letter-spacing: .7px;
  text-transform: lowercase;
  backdrop-filter: blur(2px);
}
.run-chip--amber {
  background: rgba(255,209,102,.12);
  border: 1px solid rgba(255,209,102,.55);
  color: var(--text);
  box-shadow: inset 0 0 0 1px rgba(255,209,102,.15), 0 0 16px rgba(255,183,3,.12);
}

/* “Coming soon” card */
.run-soon {
  display: grid;
  grid-template-columns: 18px 1fr;
  column-gap: 12px;
  align-items: start;
  padding: 14px 16px;
  margin: 8px 0 14px;
  border-radius: 14px;
  border: 1px solid rgba(255,209,102,.28);
  background:
      linear-gradient(180deg, rgba(255,183,3,.10), rgba(0,0,0,.06)),
      rgba(18,16,24,.35);
  box-shadow:
      inset 0 0 0 1px rgba(255,209,102,.10),
      0 0 24px rgba(255,183,3,.14);
}
.run-soon .spark {
  width: 10px; height: 10px;
  margin-top: 3px;
  border-radius: 50%;
  background: radial-gradient(circle at 50% 40%, #ffd166, #ffb703 70%);
  box-shadow: 0 0 12px rgba(255,209,102,.85), 0 0 22px rgba(255,183,3,.35);
}
.run-soon strong { color: #fff; }
.run-amber .muted { color: #e6e8ff; opacity:.85; }

/* Actions: single column with premium buttons */
.run-amber .run-modal-actions { grid-template-columns: 1fr; gap: 10px; }

.run-amber .btn-ghost,
.run-amber .btn-primary {
  height: 42px;
  border-radius: 12px;
  font-weight: 800;
  letter-spacing: .35px;
  transition: transform .15s ease, filter .18s ease, box-shadow .22s ease, border-color .2s ease;
}
.run-amber .btn-ghost {
  color: var(--text);
  background: rgba(12,18,30,.58);
  border: 1px solid rgba(255,255,255,.12);
  box-shadow: inset 0 0 0 1px rgba(255,209,102,.15);
}
.run-amber .btn-ghost:hover {
  transform: translateY(-1px);
  border-color: rgba(255,209,102,.5);
  box-shadow:
      inset 0 0 0 1px rgba(255,209,102,.32),
